
    <Resource name="jdbc/postgres"
              username="${DB_USER}"
              password="${DB_PASSWORD}"
              url="jdbc:postgresql://${DB_HOST}:${DB_PORT}/${DB_NAME}"
              auth="Container"
              driverClassName="org.postgresql.Driver"
              type="javax.sql.DataSource"
              maxTotal="100"
              maxIdle="30"
              maxWaitMillis="-1"
    />
